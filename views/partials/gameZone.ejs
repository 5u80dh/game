<section class="container d-none" id="gameZone">
    <div class="alert alert-info py-2 rounded-0" role="alert">
        <div class="row align-items-center">
            <div class="col-2">
                <p class="lead fw-bold mb-0" id="clock">0</p>
            </div>
            <div class="col-8 text-center" id="wordDiv"></div>
        </div>
    </div>
    <div class="row justify-content-center mx-0">
        <div class="col-2 h-100 players"></div>
        <div class="col-7 h-100 d-flex flex-column">
            <div id="sketchpad"></div>
            <%- include('tools') %>
        </div>
        <div class="col-3 h-100 bg-white p-0">
            <div class="messages"></div>
            <form id="sendMessage" class="m-2">
                <input class="form-control" type="text" placeholder="Type your guess here...">
            </form>
        </div>
    </div>
</section>